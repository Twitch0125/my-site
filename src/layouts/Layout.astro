---
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<meta name="generator" content={Astro.generator} />
	<title>{title}</title>
	<link href="https://api.fontshare.com/v2/css?f[]=satoshi@700,500,400&display=swap" rel="stylesheet">
</head>

<body class="bg-stone-100 text-stone-900 font-sans">
	<h1 class="absolute top-0 left-0 sr-only">Accessibility Links</h1>
	<a class="focus:w-auto focus:h-auto focus:overflow-auto absolute top-0 left-0 w-0 h-0 overflow-hidden"
		href="#content">Skip to content</a>
	<a class="focus:w-auto focus:h-auto focus:overflow-auto absolute top-0 left-0 w-0 h-0 overflow-hidden"
		href="#nav">Skip
		to
		nav</a>
	<a class="focus:w-auto focus:h-auto focus:overflow-auto absolute top-0 left-0 w-0 h-0 overflow-hidden"
		href="#skills">Skip
		to Skills</a>
	<a class="focus:w-auto focus:h-auto focus:overflow-auto absolute top-0 left-0 w-0 h-0 overflow-hidden"
		href="#experience">Skip to Experience</a>
	<a class="focus:w-auto focus:h-auto focus:overflow-auto absolute top-0 left-0 w-0 h-0 overflow-hidden"
		href="#education">Skip to Education</a>
	<nav id="nav" class="bg-stone-900 sm:py-2 py-4 mb-8 text-white">
		<div class="sm:text-sm container flex items-center max-w-xl px-3 mx-auto space-x-6 font-medium">
			<a class="underline-offset-4 decoration-stone-700 underline" href="/">Resume</a>
			<a class="underline-offset-4 decoration-stone-700 underline" href="/favorites">Favorites</a>
			<a class="flex items-center" href="mailto:kaleb.ercanbrack@hey.com">
				<div class="i-carbon-email mr-1 text-xl" />
				<span class="decoration-stone-700 underline-offset-4 underline">
					Email Me
				</span>
			</a>
			<a class="flex items-center" href="https://github.com/Twitch0125">
				<div class="i-carbon-logo-github mr-1 text-xl" />
				<span class="decoration-stone-700 underline-offset-4 underline">
					Github
				</span>
			</a>
			<a class="flex items-center" href="https://github.com/Twitch0125">
				<div class="i-carbon-logo-linkedin mr-1 text-xl" />
				<span class="decoration-stone-700 underline-offset-4 underline">
					Linked In
				</span>
			</a>
		</div>
	</nav>
	<div class="sm:container sm:max-w-xl sm:mx-auto">
		<section id="content" class="prose-stone sm:prose-lg px-3 prose">
			<slot />
		</section>
	</div>
</body>

</html>